@model ChargingBooking

<h2>Edit Booking</h2>

<form asp-action="EditBooking" method="post">
    <input type="hidden" asp-for="BookingId" />

    <div class="form-group">
        <label>Charging Station</label>
        <input type="text" class="form-control" value="@Model.Station?.Name" readonly />
    </div>

    <div class="form-group">
        <label>Booking Date</label>
        <input type="datetime-local" asp-for="BookingDate" class="form-control" />
    </div>

    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" class="form-control">
            <option>Pending</option>
            <option>Completed</option>
            <option>Cancelled</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
