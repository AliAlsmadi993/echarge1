@model List<ChargingStation>

@{
    ViewData["Title"] = "My Charging Stations";
    Layout = "~/Views/Shared/_ProviderLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --primary-color: #1abc9c;
            --primary-light: rgba(26, 188, 156, 0.1);
            --primary-dark: #16a085;
            --secondary-color: #3498db;
            --success-color: #2ecc71;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
            --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .stations-container {
            padding: 2rem 0;
        }

        .page-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--primary-light);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .page-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary-dark);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .btn-add {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
            border: none;
            padding: 0.6rem 1.2rem;
            border-radius: 6px;
            font-weight: 500;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
        }

            .btn-add:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(26, 188, 156, 0.3);
                color: white;
            }

        .stations-table {
            width: 100%;
            background: white;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
            overflow: hidden;
            border-collapse: collapse;
        }

            .stations-table th {
                text-align: left;
                padding: 1rem 1.5rem;
                background-color: #f8f9fa;
                font-weight: 600;
                color: #2c3e50;
                text-transform: uppercase;
                font-size: 0.85rem;
                border-bottom: 2px solid var(--primary-light);
            }

            .stations-table td {
                padding: 1.25rem 1.5rem;
                border-bottom: 1px solid #eee;
                vertical-align: middle;
            }

            .stations-table tr:last-child td {
                border-bottom: none;
            }

            .stations-table tr:hover {
                background-color: rgba(26, 188, 156, 0.03);
            }

        .availability-indicator {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 8px;
        }

        .available {
            background-color: var(--success-color);
        }

        .limited {
            background-color: var(--warning-color);
        }

        .unavailable {
            background-color: var(--danger-color);
        }

        .btn-action {
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-weight: 500;
            transition: var(--transition);
            font-size: 0.85rem;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            text-decoration: none;
            border: none;
            cursor: pointer;
        }

        .btn-info {
            background-color: var(--secondary-color);
            color: white;
        }

            .btn-info:hover {
                background-color: #2980b9;
                color: white;
                transform: translateY(-2px);
            }

        .btn-warning {
            background-color: var(--warning-color);
            color: white;
        }

            .btn-warning:hover {
                background-color: #e67e22;
                color: white;
                transform: translateY(-2px);
            }

        .btn-danger {
            background-color: var(--danger-color);
            color: white;
        }

            .btn-danger:hover {
                background-color: #c0392b;
                color: white;
                transform: translateY(-2px);
            }

        .action-group {
            display: flex;
            gap: 0.5rem;
        }

        .no-stations {
            background: #f8f9fa;
            border-left: 5px solid var(--primary-color);
            padding: 2rem;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            margin-top: 2rem;
        }

        .alert-success {
            background-color: rgba(46, 204, 113, 0.15);
            color: var(--success-color);
            padding: 1rem;
            border-radius: 6px;
            border-left: 4px solid var(--success-color);
            margin-bottom: 1.5rem;
        }

        /* Responsive Design */
        @@media (max-width: 992px) {
            .stations-table {
                display: block;
                overflow-x: auto;
            }
        }

        @@media (max-width: 768px) {
            .page-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .stations-table td {
                display: block;
                width: 100%;
                text-align: right;
                padding-left: 50%;
                position: relative;
            }

                .stations-table td::before {
                    content: attr(data-label);
                    position: absolute;
                    left: 1.5rem;
                    width: calc(50% - 1.5rem);
                    padding-right: 1rem;
                    text-align: left;
                    font-weight: 600;
                    color: #2c3e50;
                }

            .stations-table thead {
                display: none;
            }

            .stations-table tr {
                margin-bottom: 1rem;
                display: block;
                border: 1px solid #eee;
                border-radius: 8px;
            }

                .stations-table tr:last-child {
                    margin-bottom: 0;
                }

            .action-group {
                justify-content: flex-end;
            }
        }
    </style>
}

<div class="stations-container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-charging-station"></i> My Charging Stations
        </h1>
        <a asp-controller="ChargingStation" asp-action="AddStation" class="btn-add">
            <i class="fas fa-plus"></i> Add New Station
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert-success">@TempData["Success"]</div>
    }

    @if (Model.Any())
    {
        <table class="stations-table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Capacity</th>
                    <th>Availability</th>
                    <th>Price/Charge</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var station in Model)
                {
                    var availabilityClass = station.AvailableSpots == 0 ? "unavailable" :
                    station.AvailableSpots < station.Capacity / 2 ? "limited" : "available";
                    <tr>
                        <td data-label="Name">
                            <strong>@station.Name</strong>
                        </td>
                        <td data-label="Location">@station.Location</td>
                        <td data-label="Capacity">@station.Capacity</td>
                        <td data-label="Availability">
                            <span class="availability-indicator @availabilityClass"></span>
                            @station.AvailableSpots / @station.Capacity
                        </td>
                        <td data-label="Price">@station.PricePerCharge.ToString("0.00") JOD</td>
                        <td data-label="Actions">
                            <div class="action-group">
                                <a asp-action="ViewStationDetails" asp-controller="Map" asp-route-id="@station.StationId"
                                   class="btn-action btn-info">
                                    <i class="fas fa-list"></i> Bookings
                                </a>
                                <a asp-controller="Map" asp-action="EditStation" asp-route-id="@station.StationId"
                                   class="btn-action btn-warning">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form asp-action="DeleteStation" asp-route-id="@station.StationId" method="post" style="display:inline;">
                                    <button type="submit" class="btn-action btn-danger">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-stations">
            <i class="fas fa-charging-station" style="font-size: 2rem; color: var(--primary-color); margin-bottom: 1rem;"></i>
            <h4>No Charging Stations Found</h4>
            <p class="text-muted">You haven't added any charging stations yet. Get started by adding your first station.</p>
        </div>
    }
</div>

<script>
    $(document).ready(function() {
        // Add hover effect to table rows
        $('.stations-table tr').hover(
            function() {
                $(this).css('background-color', 'rgba(26, 188, 156, 0.05)');
            },
            function() {
                $(this).css('background-color', '');
            }
        );

        // Add confirmation for delete action
        $('.btn-danger').click(function() {
            return confirm('Are you sure you want to delete this charging station?');
        });
    });
</script>