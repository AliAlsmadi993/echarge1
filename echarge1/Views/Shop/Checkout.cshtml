@model echarge1.Models.CartItem

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

@section Styles {
    <link rel="stylesheet" href="~/css/checkOut.css" asp-append-version="true" />
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="cart-summary">
    <h3>Your Cart</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price $</td>
                    <td>@(item.Quantity * item.Product.Price) $</td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total Amount: <strong>@ViewBag.TotalAmount $</strong></h3>

    <div>
        <h4>Payment Information:</h4>
        <p>Make payment to the following number: <strong>0777785218</strong> and upload the receipt image.</p>
        <p>Please upload your receipt for payment confirmation:</p>
        <input type="file" name="ReceiptImage" accept="image/*" required />
    </div>

    <div>
        <h4>Shipping Address:</h4>
        <textarea name="shippingAddress" class="form-control" placeholder="Enter your shipping address" rows="4" required></textarea>
    </div>

    <form method="post" asp-action="ConfirmCheckout" asp-controller="Shop" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-success w-100 mt-3">Proceed to Payment</button>
    </form>
</div>
