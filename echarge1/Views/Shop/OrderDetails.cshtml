@model echarge1.Models.Order
@{
    var returnUrl = Context.Request.Headers["Referer"].ToString();
    ViewData["Title"] = "Order Details";
}

@section Styles {
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f5f9fb;
            padding: 30px;
        }

        h2 {
            color: #1ABC9C;
            text-align: center;
            margin-bottom: 40px;
            animation: fadeInDown 0.6s ease;
        }

        .order-info, .user-info, .products-table {
            background: #fff;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            margin-bottom: 30px;
            animation: fadeInUp 0.6s ease;
        }

            .order-info h4, .user-info h4 {
                color: #1ABC9C;
                margin-bottom: 20px;
                font-weight: bold;
            }

            .order-info p, .user-info li {
                font-size: 16px;
                color: #444;
                line-height: 1.7;
            }

        ul {
            padding-left: 0;
            list-style: none;
        }

            ul li {
                margin-bottom: 10px;
            }

        .table th {
            background-color: #1ABC9C;
            color: white;
            font-size: 15px;
            text-align: center;
        }

        .table td {
            text-align: center;
            vertical-align: middle;
        }

        .receipt-img {
            max-width: 100%;
            border-radius: 14px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
            margin-top: 15px;
        }

        .btn-secondary {
            background-color: #2c3e50;
            color: white;
            padding: 10px 20px;
            border-radius: 10px;
            transition: all 0.3s ease-in-out;
        }

            .btn-secondary:hover {
                background-color: #1a252f;
                transform: translateY(-2px);
            }

        .receipt-preview-wrapper {
            width: 100%;
            max-width: 300px;
            max-height: 400px;
            overflow: hidden;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .receipt-preview {
            width: 100%;
            height: auto;
            border-radius: 12px;
            object-fit: contain;
            display: block;
            transition: transform 0.3s ease;
        }

            .receipt-preview:hover {
                transform: scale(1.03);
            }

    </style>
}

<h2>Order Details</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="order-info">
    <h4>🧾 Order #@Model.OrderId</h4>
    <p><strong>Date:</strong> @Model.OrderDate?.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Total:</strong> @Model.TotalAmount $</p>
    <p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>

    @if (!string.IsNullOrEmpty(Model.ReceiptImageUrl))
    {
        <div class="receipt-section mt-4">
            <strong>Payment Receipt:</strong>
            <div class="receipt-preview-wrapper">
                <img src="@Model.ReceiptImageUrl" class="receipt-preview" alt="Receipt Image" />
            </div>
        </div>
    }
</div>

<div class="user-info">
    <h4>User Information</h4>
    @if (Model.User != null)
    {
        <ul>
            <li><strong>Name:</strong> @Model.User.FullName</li>
            <li><strong>Email:</strong> @Model.User.Email</li>
            <li><strong>Phone:</strong> @Model.User.PhoneNumber</li>
            <li><strong>Account Type:</strong> @Model.User.UserType</li>
        </ul>
    }
    else
    {
        <p><em>User not found (may be deleted)</em></p>
    }
</div>

<div class="product-list">
    <h4>Products</h4>
    <table class="table table-bordered">
        <thead class="table-success">
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Product?.Name</td>
                    <td>@item.Product?.Price $</td>
                    <td>@item.Quantity</td>
                    <td>@item.SubTotal $</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right mt-3">
        <h4>Total: <strong>@Model.TotalAmount $</strong></h4>
    </div>
</div>

<a href="@returnUrl" class="btn btn-secondary mt-3">← Back</a>
