@model echarge1.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="order-info mt-4 mb-4">
    <h4>Order #@Model.OrderId</h4>
    <p><strong>Date:</strong> @Model.OrderDate?.ToString("yyyy-MM-dd HH:mm")</p>
    <p><strong>Status:</strong> @Model.Status</p>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Product.Price $</td>
                <td>@item.Quantity</td>
                <td>@(item.SubTotal) $</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-right">
    <h4>Total: <strong>@Model.TotalAmount $</strong></h4>
</div>

<a href="@Url.Action("History", "Shop")" class="btn btn-primary mt-3">Back to Orders</a>

@section Styles {
    <style>
        h2 {
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .order-info p {
            margin: 0;
            font-size: 16px;
        }
    </style>
}
