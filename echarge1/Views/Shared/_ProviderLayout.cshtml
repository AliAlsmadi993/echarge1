<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Provider Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    @RenderSection("Styles", required: false)

    <style>
        body {
            display: flex;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #e8fdf9, #ffffff);
            overflow-x: hidden;
        }

        .sidebar {
            width: 260px;
            background: linear-gradient(to bottom, #1ABC9C, #16a085);
            color: white;
            flex-shrink: 0;
            box-shadow: 4px 0 12px rgba(0, 0, 0, 0.1);
            animation: slideInLeft 0.6s ease;
        }

            .sidebar h4 {
                padding: 20px;
                text-align: center;
                font-weight: 700;
                font-size: 22px;
                border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            }

            .sidebar a {
                color: white;
                padding: 16px 24px;
                display: flex;
                align-items: center;
                text-decoration: none;
                transition: background 0.3s ease;
            }

                .sidebar a i {
                    margin-right: 12px;
                }

                .sidebar a:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                }

        .main-content {
            flex-grow: 1;
            padding: 40px 30px;
            background-color: #f9fdfd;
            animation: fadeIn 0.7s ease-in-out;
            min-height: 100vh;
        }

     
    </style>
</head>
<body>
    <div class="sidebar">
        <h4>Provider Panel</h4>
        <a asp-controller="Provider" asp-action="Dashboard"><i class="fas fa-chart-bar"></i> Dashboard</a>
        <a asp-controller="Provider" asp-action="MyProducts"><i class="fas fa-box"></i> My Products</a>
        <a asp-controller="Provider" asp-action="AddProduct"><i class="fas fa-plus"></i> Add Product</a>
        <a asp-controller="Provider" asp-action="MyOrders"><i class="fas fa-shopping-cart"></i> Orders</a>
        <a asp-controller="Provider" asp-action="PromotionRequests"><i class="fas fa-bullhorn"></i> Promotion Requests</a>
        <a asp-controller="Map" asp-action="MyStations"><i class="fas fa-charging-station"></i> My Stations</a>
        <a asp-controller="Provider" asp-action="Profile"><i class="fas fa-user-circle"></i> My Profile</a>
        <a asp-controller="Provider" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>

    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
