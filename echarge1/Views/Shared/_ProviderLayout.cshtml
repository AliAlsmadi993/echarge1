<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Premium Provider Hub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/providerlayout.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    @RenderSection("Styles", required: false)

    <style>


    </style>
</head>
<body>
    <!-- Animated Background Particles -->
    <div class="particles" id="particles-js"></div>

    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <div class="sidebar-header">
            <a href="#" class="sidebar-brand">
                <i class="fas fa-bolt sidebar-brand-icon"></i>
                <span>E-Charge Pro</span>
            </a>
        </div>
        <div class="sidebar-menu">
            <a asp-controller="Provider" asp-action="Dashboard" class="sidebar-link">
                <i class="fas fa-chart-pie"></i>
                <span>Analytics Dashboard</span>
            </a>
            <a asp-controller="Provider" asp-action="MyProducts" class="sidebar-link">
                <i class="fas fa-boxes"></i>
                <span>Product Portfolio</span>
            </a>
            <a asp-controller="Provider" asp-action="AddProduct" class="sidebar-link">
                <i class="fas fa-plus-square"></i>
                <span>Create Product</span>
            </a>
            <a asp-controller="Provider" asp-action="MyOrders" class="sidebar-link">
                <i class="fas fa-shopping-basket"></i>
                <span>Order Management</span>
            </a>
            <a asp-controller="Map" asp-action="MyStations" class="sidebar-link">
                <i class="fas fa-charging-station"></i>
                <span>Charging Stations</span>
            </a>
            <a asp-controller="Provider" asp-action="Profile" class="sidebar-link">
                <i class="fas fa-user-astronaut"></i>
                <span>My Profile</span>
            </a>
            <div class="mt-4 pt-3">
                <a asp-controller="Provider" asp-action="Logout" class="sidebar-link">
                    <i class="fas fa-rocket"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header -->
        <header class="main-header">
            <button class="sidebar-toggle d-lg-none" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            <h1 class="page-title">
                <i class="fas @ViewData["TitleIcon"]"></i>
                @ViewData["Title"]
            </h1>
            @* <div class="user-menu"> *@
            @*     <div class="notification-badge"> *@
            @*         <i class="fas fa-bell"></i> *@
            @*         <span class="notification-count">3</span> *@
            @*     </div> *@
            @*     <div class="user-profile"> *@
            @*         <img src="~/images/default-avatar.png" alt="User" class="user-avatar"> *@
            @*         <span class="user-name d-none d-md-inline">Premium Provider</span> *@
            @*     </div> *@
            @* </div> *@
        </header>

        <!-- Page Content -->
        <main role="main" style="animation: fadeIn 0.7s ease-out;">
            @RenderBody()
        </main>
    </div>

    <!-- Floating Action Button -->
    <div class="fab" id="helpFab">
        <i class="fas fa-question"></i>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        $(document).ready(function() {
            // Toggle sidebar on mobile
            $('#sidebarToggle').click(function() {
                $('.sidebar').toggleClass('active');
                $(this).toggleClass('active');
            });

            // Highlight active menu item
            const currentPath = window.location.pathname;
            $('.sidebar-link').each(function() {
                if ($(this).attr('href').toLowerCase() === currentPath.toLowerCase()) {
                    $(this).addClass('active');
                }
            });

            // Initialize particles.js
            particlesJS("particles-js", {
                "particles": {
                    "number": {
                        "value": 60,
                        "density": {
                            "enable": true,
                            "value_area": 800
                        }
                    },
                    "color": {
                        "value": ["#00c9a7", "#845ec2", "#ff6b6b"]
                    },
                    "shape": {
                        "type": "circle",
                        "stroke": {
                            "width": 0,
                            "color": "#000000"
                        }
                    },
                    "opacity": {
                        "value": 0.5,
                        "random": true,
                        "anim": {
                            "enable": true,
                            "speed": 1,
                            "opacity_min": 0.1,
                            "sync": false
                        }
                    },
                    "size": {
                        "value": 5,
                        "random": true,
                        "anim": {
                            "enable": true,
                            "speed": 2,
                            "size_min": 1,
                            "sync": false
                        }
                    },
                    "line_linked": {
                        "enable": true,
                        "distance": 150,
                        "color": "#00c9a7",
                        "opacity": 0.3,
                        "width": 1
                    },
                    "move": {
                        "enable": true,
                        "speed": 1,
                        "direction": "none",
                        "random": true,
                        "straight": false,
                        "out_mode": "out",
                        "bounce": false,
                        "attract": {
                            "enable": true,
                            "rotateX": 600,
                            "rotateY": 1200
                        }
                    }
                },
                "interactivity": {
                    "detect_on": "canvas",
                    "events": {
                        "onhover": {
                            "enable": true,
                            "mode": "grab"
                        },
                        "onclick": {
                            "enable": true,
                            "mode": "push"
                        },
                        "resize": true
                    },
                    "modes": {
                        "grab": {
                            "distance": 140,
                            "line_linked": {
                                "opacity": 0.8
                            }
                        },
                        "push": {
                            "particles_nb": 4
                        }
                    }
                },
                "retina_detect": true
            });

            // Floating animation for FAB
            setInterval(() => {
                $('#helpFab').css('transform', 'translateY(-5px)');
                setTimeout(() => {
                    $('#helpFab').css('transform', 'translateY(0)');
                }, 1000);
            }, 2000);

            // Help FAB click event
            $('#helpFab').click(function() {
                alert('Need help? Contact our support team at support@echarge.com');
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>