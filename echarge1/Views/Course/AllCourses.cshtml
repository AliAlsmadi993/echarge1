@model List<echarge1.Models.Course>

@{
    ViewData["Title"] = "Training Courses - EV Maintenance";
}

@section Styles {
    <link rel="stylesheet" href="~/css/allcorcess.css" asp-append-version="true" />
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" />


<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <h1>Electric Vehicle Maintenance Training</h1>
        <p>Learn the latest techniques in EV charging station maintenance and electric vehicle repair.</p>
        <a href="#courses" class="cta-button">Explore Courses</a>
    </div>
</section>

<!-- Courses Section -->
<section class="container" id="courses">
    <h2>Our Courses</h2>
    <div class="courses">
        @foreach (var course in Model)
        {
            <div class="course-item">
                <h3>@course.Title</h3>
                <p>@course.Description</p>
                <p class="price">@course.Price.ToString("0.00") JOD</p>
                <div class="buttons">
                    <a asp-controller="Course" asp-action="Apply" asp-route-id="@course.CourseId" class="apply-button">Apply Now</a>
                    <button class="info-button" onclick="toggleInfo(event, @course.CourseId)">More Info</button>
                </div>
                <div class="more-info" id="more-info-@course.CourseId">
                    <p><strong>Instructor:</strong> @course.Instructor</p>
                    <p><strong>Start Date:</strong> @course.StartDate.ToShortDateString()</p>
                    <p><strong>End Date:</strong> @course.EndDate.ToShortDateString()</p>
                </div>
            </div>
        }
    </div>
</section>

<!-- Footer -->
<footer class="footer">
    <p>&copy; 2025 EV Training Academy. All rights reserved.</p>
</footer>

<script>
    function toggleInfo(event, courseNumber) {
        event.preventDefault();
        event.stopPropagation();

        const moreInfo = document.getElementById(`more-info-${courseNumber}`);
        if (moreInfo.style.display === "none" || moreInfo.style.display === "") {
            moreInfo.style.display = "block";
        } else {
            moreInfo.style.display = "none";
        }
    }
</script>
