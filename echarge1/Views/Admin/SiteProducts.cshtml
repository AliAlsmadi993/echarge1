@{
    ViewData["Title"] = "Site Products";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-success">Products Owned by Site</h2>
    <a class="btn btn-success" asp-controller="Admin" asp-action="AddSiteProduct">
        <i class="fas fa-plus"></i> Add New Product
    </a>
</div>

<table class="table table-bordered mt-3">
    <thead class="table-success">
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price JOD</td>
                <td>@item.StockQuantity</td>
                <td>@item.CreatedAt?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("EditSiteProduct", "Admin", new { id = item.ProductId })" class="btn btn-primary btn-sm">Edit</a>
                    <form method="post" asp-action="DeleteSiteProduct" asp-route-id="@item.ProductId" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
