@model List<echarge1.Models.CourseEnrollment>

@{
    ViewData["Title"] = "Course Applications";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="text-center text-success mb-4">📄 Course Applications</h2>

    @if (Model.Any())
    {
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Course</th>
                    <th>Status</th>
                    <th>CV</th>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Course?.Title</td>
                        <td>
                            <span class="badge @(item.Status == "Approved" ? "bg-success" : item.Status == "Rejected" ? "bg-danger" : "bg-secondary")">
                                @item.Status
                            </span>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.CvPath))
                            {
                                <a href="@item.CvPath" target="_blank" class="btn btn-sm btn-outline-primary">📄 View</a>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.IdPath))
                            {
                                <a href="@item.IdPath" target="_blank" class="btn btn-sm btn-outline-primary">📄 View</a>
                            }
                        </td>
                        <td>@item.EnrollmentDate?.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="@Url.Action("ViewApplication", "Admin", new { id = item.EnrollmentId })" class="btn btn-sm btn-info">🔍 View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center">No applications submitted yet.</div>
    }
</div>
