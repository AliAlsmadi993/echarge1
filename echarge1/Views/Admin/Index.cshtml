@model IEnumerable<echarge1.Models.ServiceCard>

@section Styles {
    <link rel="stylesheet" href="~/css/adminhomeserves.css" asp-append-version="true" />
}

<h2>Manage Service Cards</h2>

<!-- Table to list all service cards -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var card in Model)
        {
            <tr>
                <td>@card.Title</td>
                <td>@card.Description</td>
                <td>
                    <a href="@Url.Action("Edit", "Admin", new { id = card.ServiceCardId })" class="btn btn-warning">Edit</a>

                    <!-- Delete Button -->
                    <form method="post" asp-action="Delete" asp-route-id="@card.ServiceCardId" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this card?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Admin")" class="btn btn-success">Add New Card</a>
