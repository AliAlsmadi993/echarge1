@model echarge1.Models.CourseEnrollment

@{
    ViewData["Title"] = "Application Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
}

<style>
    :root {
        --primary-color: #1abc9c;
        --primary-light: rgba(26, 188, 156, 0.1);
        --primary-dark: #16a085;
        --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    }

    .application-container {
        max-width: 800px;
        margin: 2rem auto;
        animation: fadeIn 0.6s ease-out;
    }

    .application-header {
        text-align: center;
        margin-bottom: 2rem;
        position: relative;
    }

    .application-title {
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 1rem;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .application-card {
        border-radius: 12px;
        box-shadow: var(--card-shadow);
        border: none;
        overflow: hidden;
        padding: 2rem;
    }

    .detail-row {
        padding: 1rem 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        display: flex;
        align-items: center;
    }

    .detail-label {
        font-weight: 600;
        color: #2c3e50;
        min-width: 180px;
    }

    .detail-value {
        color: #34495e;
        flex: 1;
    }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.85rem;
    }

    .status-approved {
        background-color: rgba(46, 204, 113, 0.1);
        color: #2ecc71;
    }

    .status-rejected {
        background-color: rgba(231, 76, 60, 0.1);
        color: #e74c3c;
    }

    .status-pending {
        background-color: rgba(241, 196, 15, 0.1);
        color: #f1c40f;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .btn-approve {
        background: linear-gradient(135deg, #2ecc71, #27ae60);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: var(--transition);
        box-shadow: 0 4px 15px rgba(46, 204, 113, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-reject {
        background: linear-gradient(135deg, #e74c3c, #c0392b);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: var(--transition);
        box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-back {
        background: white;
        color: #7f8c8d;
        border: 1px solid #ddd;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-back:hover {
            background: #f8f9fa;
            transform: translateY(-2px);
        }

    .btn-file {
        background: white;
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-file:hover {
            background: var(--primary-light);
            transform: translateY(-2px);
        }

    @@media (max-width: 768px) {
        .detail-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .detail-label {
            min-width: auto;
        }

        .action-buttons {
            flex-direction: column;
            gap: 10px;
        }
    }
</style>

<div class="application-container">
    <div class="application-header">
        <h1 class="application-title">
            <i class="fas fa-file-alt"></i> Application Details
        </h1>
    </div>

    <div class="application-card">
        <div class="detail-row">
            <div class="detail-label">Full Name</div>
            <div class="detail-value">@Model.FullName</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Email</div>
            <div class="detail-value">@Model.Email</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Phone</div>
            <div class="detail-value">@Model.Phone</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Course</div>
            <div class="detail-value">@Model.Course?.Title</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Enrollment Date</div>
            <div class="detail-value">@Model.EnrollmentDate?.ToString("dd/MM/yyyy HH:mm")</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Status</div>
            <div class="detail-value">
                <span class="status-badge @(Model.Status == "Approved" ? "status-approved" : Model.Status == "Rejected" ? "status-rejected" : "status-pending")">
                    <i class="fas @(Model.Status == "Approved" ? "fa-check-circle" : Model.Status == "Rejected" ? "fa-times-circle" : "fa-clock")"></i>
                    @Model.Status
                </span>
            </div>
        </div>

        <div class="detail-row">
            <div class="detail-label">Additional Info</div>
            <div class="detail-value">@Model.AdditionalInfo</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">CV File</div>
            <div class="detail-value">
                @if (!string.IsNullOrEmpty(Model.CvPath))
                {
                    <a href="@Model.CvPath" target="_blank" class="btn-file">
                        <i class="fas fa-file-pdf"></i> View CV
                    </a>
                }
                else
                {
                    <span class="text-muted">No CV uploaded.</span>
                }
            </div>
        </div>

        <div class="detail-row" style="border-bottom: none;">
            <div class="detail-label">ID File</div>
            <div class="detail-value">
                @if (!string.IsNullOrEmpty(Model.IdPath))
                {
                    <a href="@Model.IdPath" target="_blank" class="btn-file">
                        <i class="fas fa-id-card"></i> View ID
                    </a>
                }
                else
                {
                    <span class="text-muted">No ID uploaded.</span>
                }
            </div>
        </div>

        <form asp-action="UpdateApplicationStatus" method="post" class="mt-4">
            <input type="hidden" name="id" value="@Model.EnrollmentId" />

            <div class="action-buttons">
                <button type="submit" name="status" value="Approved" class="btn-approve">
                    <i class="fas fa-check"></i> Approve
                </button>
                <button type="submit" name="status" value="Rejected" class="btn-reject">
                    <i class="fas fa-times"></i> Reject
                </button>
                <a href="@Url.Action("Courses", "Admin")" class="btn-back">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Add hover effect to buttons
        $('.btn-approve, .btn-reject, .btn-file').hover(
            function() {
                $(this).css('transform', 'translateY(-3px)');
            },
            function() {
                $(this).css('transform', 'translateY(0)');
            }
        );
    });
</script>