@model echarge1.Models.CourseEnrollment


@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    ViewData["Title"] = "Application Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 mb-5">
    <h2 class="text-center text-success mb-4">📋 Application Details</h2>

    <div class="card shadow-sm p-4">
        <dl class="row">
            <dt class="col-sm-3">Full Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Course</dt>
            <dd class="col-sm-9">@Model.Course?.Title</dd>

            <dt class="col-sm-3">Enrollment Date</dt>
            <dd class="col-sm-9">@Model.EnrollmentDate?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge @(Model.Status == "Approved" ? "bg-success" : Model.Status == "Rejected" ? "bg-danger" : "bg-secondary")">
                    @Model.Status
                </span>
            </dd>

            <dt class="col-sm-3">Additional Info</dt>
            <dd class="col-sm-9">@Model.AdditionalInfo</dd>

            <dt class="col-sm-3">CV File</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.CvPath))
                {
                    <a href="@Model.CvPath" target="_blank" class="btn btn-outline-primary btn-sm">📄 View CV</a>
                }
                else
                {
                    <span class="text-muted">No CV uploaded.</span>
                }
            </dd>

            <dt class="col-sm-3">ID File</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.IdPath))
                {
                    <a href="@Model.IdPath" target="_blank" class="btn btn-outline-primary btn-sm">📄 View ID</a>
                }
                else
                {
                    <span class="text-muted">No ID uploaded.</span>
                }
            </dd>
        </dl>

        <form asp-action="UpdateApplicationStatus" method="post" class="mt-4 text-center">
            <input type="hidden" name="id" value="@Model.EnrollmentId" />

            <button type="submit" name="status" value="Approved" class="btn btn-success me-2">✅ Approve</button>
            <button type="submit" name="status" value="Rejected" class="btn btn-danger">❌ Reject</button>
        </form>

        <div class="mt-3 text-center">
            <a href="@Url.Action("Courses", "Admin")" class="btn btn-secondary">🔙 Back to List</a>
        </div>
    </div>
</div>
