@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">📊 Admin Dashboard</h2>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <p class="card-text display-5">@ViewBag.TotalUsers</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <h5 class="card-title">Total Providers</h5>
                <p class="card-text display-5">@ViewBag.TotalProviders</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <h5 class="card-title">Total Products</h5>
                <p class="card-text display-5">@ViewBag.TotalProducts</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-warning h-100">
            <div class="card-body">
                <h5 class="card-title">Total Orders</h5>
                <p class="card-text display-5">@ViewBag.TotalOrders</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-danger h-100">
            <div class="card-body">
                <h5 class="card-title">Total Bookings</h5>
                <p class="card-text display-5">@ViewBag.TotalBookings</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-secondary h-100">
            <div class="card-body">
                <h5 class="card-title">Total Courses</h5>
                <p class="card-text display-5">@ViewBag.TotalCourses</p>
            </div>
        </div>
    </div>
</div>
