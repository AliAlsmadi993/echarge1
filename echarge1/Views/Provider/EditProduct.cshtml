@model echarge1.Models.Product
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_ProviderLayout.cshtml";
}

<h2 class="mb-4">✏️ Edit Product</h2>

<form method="post" enctype="multipart/form-data" asp-action="EditProduct">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Price</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label>Stock</label>
            <input asp-for="StockQuantity" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label>Category</label>
            <input asp-for="Category" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label>Upload New Images</label>
        <input type="file" name="Images" class="form-control" multiple />
    </div>

    <div class="form-group">
        <label>Existing Images</label>
        <div class="row">
            @foreach (var image in Model.ProductImages)
            {
                <div class="col-md-3 text-center mb-3">
                    <img src="@image.ImageUrl" class="img-thumbnail" style="height:120px; object-fit:cover;" />
                    <form asp-action="DeleteProductImage" method="post" asp-route-id="@image.ImageId" onsubmit="return confirm('Delete this image?');">
                        <input type="hidden" name="productId" value="@Model.ProductId" />
                        <button type="submit" class="btn btn-danger btn-sm mt-2">🗑 Delete</button>
                    </form>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="MyProducts" class="btn btn-secondary ml-2">Cancel</a>
</form>
