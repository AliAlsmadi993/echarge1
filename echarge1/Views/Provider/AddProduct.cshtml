@model echarge1.Models.Product
@{
    ViewData["Title"] = "Add Product";

    Layout = "~/Views/Shared/_ProviderLayout.cshtml";

}

<h2 class="mb-4">➕ Add New Product</h2>

<form method="post" enctype="multipart/form-data" asp-action="AddProduct">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Write a short description..."></textarea>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Price (JD)</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label>Stock</label>
            <input asp-for="StockQuantity" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label>Category</label>
            <input asp-for="Category" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label>Upload Product Images</label>
        <input type="file" name="Images" class="form-control" multiple />
    </div>

    <button type="submit" class="btn btn-success">Save Product</button>
    <a asp-action="MyProducts" class="btn btn-secondary">Cancel</a>
</form>
