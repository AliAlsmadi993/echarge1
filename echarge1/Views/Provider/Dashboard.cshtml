@{
    ViewData["Title"] = "Provider Dashboard";
    Layout = "~/Views/Shared/_ProviderLayout.cshtml";
}

<h2 class="mb-4"><i class="fas fa-tachometer-alt"></i> Dashboard Overview</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-box"></i> Total Products</h5>
                <p class="card-text display-6">@ViewBag.TotalProducts</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-shopping-cart"></i> Total Orders</h5>
                <p class="card-text display-6">@ViewBag.TotalOrders</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-dollar-sign"></i> Total Revenue</h5>
                <p class="card-text display-6">$@ViewBag.TotalRevenue</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-charging-station"></i> Charging Stations</h5>
                <p class="card-text display-6">@ViewBag.TotalStations</p>
            </div>
        </div>
    </div>
</div>
