@model IEnumerable<echarge1.Models.Product>
@{
    ViewData["Title"] = "My Products";
    Layout = "~/Views/Shared/_ProviderLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --primary-color: #1abc9c;
            --primary-light: rgba(26, 188, 156, 0.1);
            --primary-dark: #16a085;
            --secondary-color: #3498db;
            --success-color: #2ecc71;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
            --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .products-container {
            padding: 2rem 0;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid var(--primary-light);
        }

        .page-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary-dark);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .btn-add {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            transition: var(--transition);
            box-shadow: 0 4px 15px rgba(26, 188, 156, 0.3);
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-add:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(26, 188, 156, 0.4);
            }

        .products-table {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: var(--card-shadow);
            background-color: white;
            animation: fadeIn 0.6s ease-out;
        }

        .table-header {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
        }

            .table-header th {
                border: none;
                padding: 15px 20px;
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.85rem;
                letter-spacing: 0.5px;
            }

        .table-body tr {
            transition: var(--transition);
        }

            .table-body tr:hover {
                background-color: var(--primary-light);
            }

        .table-body td {
            padding: 15px 20px;
            vertical-align: middle;
            border-color: #f1f1f1;
        }

        .product-name {
            font-weight: 600;
            color: #2c3e50;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .product-image {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 6px;
            border: 1px solid #eee;
        }

        .product-price {
            color: var(--primary-color);
            font-weight: 600;
        }

        .product-stock {
            font-weight: 500;
        }

            .product-stock.low {
                color: var(--danger-color);
                font-weight: 600;
            }

        .badge-featured {
            background-color: var(--success-color);
            color: white;
            padding: 0.35rem 0.75rem;
            border-radius: 50px;
            font-size: 0.75rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        .promotion-text {
            font-size: 0.85rem;
            color: #7f8c8d;
            margin-top: 0.25rem;
            display: block;
        }

        .btn-promote {
            background: linear-gradient(135deg, var(--warning-color), #e67e22);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-weight: 500;
            transition: var(--transition);
            box-shadow: 0 3px 10px rgba(243, 156, 18, 0.2);
            display: inline-flex;
            align-items: center;
            gap: 5px;
            font-size: 0.85rem;
        }

            .btn-promote:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(243, 156, 18, 0.3);
            }

        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .btn-edit {
            background-color: var(--secondary-color);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-weight: 500;
            transition: var(--transition);
            box-shadow: 0 3px 10px rgba(52, 152, 219, 0.2);
            display: inline-flex;
            align-items: center;
            gap: 5px;
            font-size: 0.85rem;
        }

            .btn-edit:hover {
                background-color: #2980b9;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
            }

        .btn-delete {
            background-color: var(--danger-color);
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-weight: 500;
            transition: var(--transition);
            box-shadow: 0 3px 10px rgba(231, 76, 60, 0.2);
            display: inline-flex;
            align-items: center;
            gap: 5px;
            font-size: 0.85rem;
        }

            .btn-delete:hover {
                background-color: #c0392b;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(231, 76, 60, 0.3);
            }

        .no-products {
            background: #f8f9fa;
            border-left: 5px solid var(--primary-color);
            padding: 1.5rem;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .page-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .action-buttons {
                flex-direction: column;
                gap: 8px;
            }

            .products-table {
                display: block;
                overflow-x: auto;
            }

            .table-body td {
                padding: 10px 15px;
            }
        }
    </style>
}

<div class="products-container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-box-open"></i> My Products
        </h1>
        <a asp-action="AddProduct" class="btn-add">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="products-table">
            <table class="table">
                <thead class="table-header">
                    <tr>
                        <th>Product</th>
                        <th>Price (JD)</th>
                        <th>Stock</th>
                        <th>Promotion</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-body">
                    @foreach (var p in Model)
                    {
                        var mainImage = p.ProductImages.FirstOrDefault()?.ImageUrl ?? "/images/default-product.png";
                        <tr>
                            <td>
                                <div class="product-name">
                                    <img src="@Url.Content(mainImage)" class="product-image" alt="@p.Name" />
                                    @p.Name
                                </div>
                            </td>
                            <td class="product-price">@p.Price.ToString("0.00")</td>
                            <td class="product-stock @(p.StockQuantity <= 5 ? "low" : "")">@p.StockQuantity</td>
                            <td>
                                @if (p.IsFeatured == true)
                                {
                                    <span class="badge-featured">
                                        <i class="fas fa-star"></i> Featured
                                    </span>
                                    <span class="promotion-text">@p.PromotionText</span>
                                }
                                else
                                {
                                    <form method="post" asp-action="RequestPromotion" asp-route-productId="@p.ProductId">
                                        <button type="submit" class="btn-promote">
                                            <i class="fas fa-bullhorn"></i> Promote (10 JD)
                                        </button>
                                    </form>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="EditProduct" asp-route-id="@p.ProductId" class="btn-edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form asp-action="DeleteProduct" asp-route-id="@p.ProductId" method="post" style="display:inline;">
                                        <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this product?');">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="no-products">
            <i class="fas fa-box-open" style="font-size: 2rem; color: var(--primary-color); margin-bottom: 1rem;"></i>
            <h4>No Products Found</h4>
            <p class="text-muted">You don't have any products yet. Start by adding your first product!</p>
        </div>
    }
</div>

<script>
    $(document).ready(function() {
        // Add hover effect to table rows
        $('.table-body tr').hover(
            function() {
                $(this).css('transform', 'translateY(-2px)');
                $(this).css('box-shadow', '0 5px 15px rgba(0,0,0,0.1)');
            },
            function() {
                $(this).css('transform', 'translateY(0)');
                $(this).css('box-shadow', 'none');
            }
        );

        // Add animation to table rows
        $('.table-body tr').each(function(i) {
            $(this).css('animation-delay', (i * 0.1) + 's');
        });

        // Highlight low stock items
        $('.product-stock.low').closest('tr').addClass('low-stock-row');
    });
</script>